@model IEnumerable<ThucHanh1.Models.Learner>
@await Component.InvokeAsync("Major")



<h1>Learner List</h1>
<div id="content">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên</th>
                <th>Họ</th>
                <th>Ngành</th>
                <th>Ngày nhập học</th>
                <th>Chức năng</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.LearnerID</td>
                    <td>@s.FirstMidName</td>
                    <td>@s.LastName</td>
                    <td>@s.Major.MajorName</td>
                    <td>@s.EnrollmentDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@s.LearnerID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@s.LearnerID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input id="keyword" class="form-control" type="text" placeholder="Search learner" />
    <button id="btnSearch" class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>

    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.pageNum; i++)
        {
            <li class="page-item" page="@i">
                <a class="page-link">@i</a>
            </li>
        }
    </ul>

</div
@section Scripts{
<script>
    $("li").click(function () {
        var id = $(this).attr("id");

        $.ajax({
            url: "LearnerByMajorID",
            data: { mid: id },
            success: function (response) {
                $("div#content").html(response);
            }
        });
    });
        $('body').on('click', 'li.page-item', function () {
        var page = $(this).attr("page");
        var mid = $(this).attr("mid");
        var keyword = $(this).attr("keyword");

        $.ajax({
            url: "LearnerFilter",
            data: { mid: mid, keyword: keyword, pageIndex: page },
            success: function (response) {
                $("div#content").html(response);
            }
        });
    });

    $("button#btnSearch").click(function () {
        var keyword = $("#keyword").val();

        $.ajax({
            url: "LearnerFilter",
            data: { keyword: keyword },
            success: function (response) {
                $("div#content").html(response);
            }
        });
    });

</script>
}





